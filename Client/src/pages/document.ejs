    /* 设置根节点字体大小以实现移动端自适应 */
    const baseSize = 16;
    function setRem() {
      const scale = document.documentElement.clientWidth / 375;
      document.documentElement.style.fontSize = (baseSize * Math.min(scale, 1)) + 'px';
    }
    setRem();
    window.onresize = () => {
      setRem();
    }
  </script>
</head>

<body>
  <div id="root"></div>
</body>

</html>